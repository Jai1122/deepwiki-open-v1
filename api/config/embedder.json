{
  "embedder": {
    "client_class": "OpenAIClient",
    "initialize_kwargs": {
      "api_key": "${VLLM_API_KEY}",
      "base_url": "${VLLM_EMBEDDING_BASE_URL}"
    },
    "batch_size": 1,
    "model_kwargs": {
      "model": "YOUR_VLLM_JINA_MODEL_ID"
    }
  },
  "retriever": {
    "top_k": 20
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
}
